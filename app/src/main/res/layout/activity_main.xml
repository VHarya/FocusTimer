<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textSize="18dp"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/label_set_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Set Time"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/label_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:text="Time Left"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="2"
                android:selectAllOnFocus="true"
                android:hint="00"
                android:textSize="32sp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="32sp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false" />

            <EditText
                android:id="@+id/input_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="2"
                android:selectAllOnFocus="true"
                android:hint="00"
                android:textSize="32sp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="32sp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false" />

            <EditText
                android:id="@+id/input_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="2"
                android:selectAllOnFocus="true"
                android:hint="00"
                android:textSize="32sp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_start"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/start_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_stop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:background="@drawable/stop_button" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/preset_button1"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:stateListAnimator="@null"
        android:elevation="0dp"
        android:text="00:30:00"
        android:textSize="16sp"
        android:includeFontPadding="false"
        android:background="@drawable/preset_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/preset_button2"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/preset_button2"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp"
        android:stateListAnimator="@null"
        android:elevation="0dp"
        android:text="00:10:00"
        android:textSize="16sp"
        android:includeFontPadding="false"
        android:textColor="?attr/colorPrimary"
        android:background="@drawable/preset_button"
        app:layout_constraintStart_toEndOf="@id/preset_button1"
        app:layout_constraintEnd_toStartOf="@id/preset_button3"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/preset_button3"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:stateListAnimator="@null"
        android:text="00:02:00"
        android:textSize="16sp"
        android:includeFontPadding="false"
        android:textColor="?attr/colorPrimary"
        android:background="@drawable/preset_button"
        app:layout_constraintStart_toEndOf="@id/preset_button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>